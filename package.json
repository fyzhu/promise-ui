{
  "name": "promise-ui",
  "private": true,
  "version": "0.0.1",
  "description": "vue3 UI组件库",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "register:components": "vitepress-rc",
    "cli:dev": "esbuild --bundle ./promiseui-cli/index.js --format=cjs --platform=node --outdir=./lib --watch",
    "cli:build": "esbuild --bundle ./promiseui-cli/index.js --format=cjs --platform=node --outdir=./lib",
    "cli": "node ./lib/index.js create",
    "test": "jest promiseui",
    "lint": "eslint . --ext .ts,.tsx,.js,.vue --fix",
    "prettier": "prettier --write",
    "prepare": "husky install"
  },
  "dependencies": {
    "@vueuse/core": "^8.6.0",
    "async-validator": "^4.2.5"
  },
  "peerDependencies": {
    "vue": "^3.2.00"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/inquirer": "^8.2.1",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "@vicons/ionicons5": "^0.12.0",
    "@vicons/utils": "^0.1.4",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vitejs/plugin-vue-jsx": "^1.3.10",
    "@vue/babel-plugin-jsx": "^1.1.1",
    "@vue/test-utils": "2.0.0-rc.21",
    "babel-jest": "^28.1.0",
    "commander": "^9.2.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.7.1",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.1",
    "inquirer": "^8.2.4",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "jest-environment-node": "^28.1.0",
    "jsdom": "^19.0.0",
    "kolorist": "^1.5.1",
    "markdown-it-container": "^3.0.0",
    "monaco-editor": "^0.33.0",
    "monaco-themes": "^0.4.2",
    "prettier": "^2.6.2",
    "sass": "^1.51.0",
    "typescript": "^4.5.4",
    "vite": "^2.9.9",
    "vitepress": "^0.22.4",
    "vue-tsc": "^0.34.7"
